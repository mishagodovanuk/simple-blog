<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Simple\Blog\Model\Post\Image\Uploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">simple_blog/image/post</argument>
            <argument name="basePath" xsi:type="string">blog/image</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="pdf" xsi:type="string">pdf</item>
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="png" xsi:type="string">png</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="bmp" xsi:type="string">bmp</item>
            </argument>
            <argument name="allowedMimeTypes" xsi:type="array">
                <item name="pdf" xsi:type="string">application/pdf</item>
                <item name="jpg" xsi:type="string">image/jpg</item>
                <item name="jpeg" xsi:type="string">image/jpeg</item>
                <item name="png" xsi:type="string">image/png</item>
                <item name="gif" xsi:type="string">image/gif</item>
                <item name="bmp" xsi:type="string">image/bmp</item>
            </argument>
        </arguments>
    </type>
    <type name="Simple\Blog\Controller\Adminhtml\Posts\Upload">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Simple\Blog\Model\Post\Image\Uploader</argument>
        </arguments>
    </type>
</config>
